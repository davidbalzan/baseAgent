{
  "name": "baseagent",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "lint": "eslint \"packages/*/src/**/*.ts\" \"skills/*/handler.ts\" --max-warnings=0",
    "lint:fix": "eslint \"packages/*/src/**/*.ts\" \"skills/*/handler.ts\" --fix",
    "dev": "pnpm --filter @baseagent/app run dev",
    "start": "pnpm --filter @baseagent/app run start",
    "clean": "pnpm -r exec rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^25.2.3",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.0.0"
  }
}
