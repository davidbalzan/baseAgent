# baseAgent — Environment Variables
# Copy this file to .env and fill in your values.

# LLM Providers (at least one required)
OPENROUTER_API_KEY=           # Dev/testing — access 300+ models
ANTHROPIC_API_KEY=            # Production Claude (Opus 4.6 / Sonnet 4.6)
ANTHROPIC_OAUTH_AUTH_FILE=    # Optional: OpenCode auth.json path for Pro/Max OAuth token
OPENAI_API_KEY=               # Production OpenAI
OPENAI_OAUTH_AUTH_FILE=       # Optional: OpenCode auth.json path for ChatGPT Plus/Pro OAuth token
OPENCODE_BASE_URL=            # Optional: OpenCode server URL (default http://127.0.0.1:4096)
OPENCODE_DIRECTORY=           # Optional: project dir header for OpenCode server
OPENCODE_MODEL_COOLDOWN_MS=   # Optional: cooldown when OpenCode model is rate-limited/quota-limited

# Channel Adapters (enable in config/default.yaml)
TELEGRAM_BOT_TOKEN=           # From @BotFather
DISCORD_BOT_TOKEN=            # From Discord Developer Portal

# Web Search
BRAVE_SEARCH_API_KEY=         # For web_search tool — https://brave.com/search/api/

# Server
PORT=3000                     # HTTP server port
